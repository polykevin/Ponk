{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "SDL2",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"-o",
				"build\\Ponk!.exe",
				"-IC:/Programmation/Ponk!/include/",
				"-IC:/Programmation/Libraries/i686-w64-mingw32/include",
				"-LC:/Programmation/Libraries/i686-w64-mingw32/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2_image",
				"-lSDL2_ttf",
				"-lSDL2",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}